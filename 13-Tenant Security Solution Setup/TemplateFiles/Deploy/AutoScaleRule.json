{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
      "storageId": {
      "type": "string"
    },
    "serverfarmId": {
      "type": "string"
    },
    "storageQueueName": {
      "type": "string",
      "defaultValue": "subjobqueue"
    },
    "subProcessorAppName":{
        "type": "string",
      "defaultValue": "defaultName"
    }
  },
  "resources": [
    {
        "name": "[concat(parameters('subProcessorAppName'),'-AutoscaleRule')]",
        "type": "Microsoft.Insights/autoscaleSettings",
        "apiVersion": "2015-04-01",
        "location": "[resourceGroup().location]",
        "properties": {
            "name": "[concat(parameters('subProcessorAppName'),'-AutoscaleRule')]",
            "enabled": true,
            "targetResourceUri": "[parameters('serverfarmId')]",
            "profiles": [
                {
                    "name": "Auto created scale condition",
                    "capacity": {
                        "minimum": "1",
                        "maximum": "19",
                        "default": "1"
                    },
                    "rules": [
                        {
                            "scaleAction": {
                                "direction": "Increase",
                                "type": "ExactCount",
                                "value": "19",
                                "cooldown": "PT1M"
                            },
                            "metricTrigger": {
                                "metricName": "ApproximateMessageCount",
                                "metricNamespace": "",
                                "metricResourceUri": "[concat(parameters('storageId'), '/services/queue/queues/',parameters('storageQueueName'))]",
                                "operator": "GreaterThan",
                                "statistic": "Average",
                                "threshold": 200,
                                "timeAggregation": "Average",
                                "timeGrain": "PT1M",
                                "timeWindow": "PT10M",
                                "Dimensions": [],
                                "dividePerInstance": false
                            }
                        },
                        {
                            "scaleAction": {
                                "direction": "Decrease",
                                "type": "ExactCount",
                                "value": "1",
                                "cooldown": "PT1M"
                            },
                            "metricTrigger": {
                                "metricName": "ApproximateMessageCount",
                                "metricNamespace": "",
                                "metricResourceUri": "[concat(parameters('storageId'), '/services/queue/queues/',parameters('storageQueueName'))]",
                                "operator": "LessThan",
                                "statistic": "Average",
                                "threshold": 6,
                                "timeAggregation": "Average",
                                "timeGrain": "PT1M",
                                "timeWindow": "PT10M",
                                "Dimensions": [],
                                "dividePerInstance": false
                            }
                        }
                    ]
                }
            ],
            "notifications": [],
            "targetResourceLocation": "[resourceGroup().location]"
        }
    }
  ]
}