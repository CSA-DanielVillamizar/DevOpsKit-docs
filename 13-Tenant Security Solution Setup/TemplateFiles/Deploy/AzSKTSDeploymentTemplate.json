{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "hostingPlanName": {
      "type": "string",
      "defaultValue": "AzSKTSServicePlan"
    },
    "skuName": {
      "type": "string",
      "defaultValue": "P2V2",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P3V2",
        "P2V2",
        "P4"
      ],
      "metadata": {
        "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    },
    "skuCapacity": {
      "type": "int",
      "defaultValue": 1,
      "minValue": 1,
      "metadata": {
        "description": "Describes plan's instance count"
      }
    },
    "storageSKU": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "storageContainerName": {
      "type": "string",
      "defaultValue": "azsktsscanresult"
    },
    "storageQueueName": {
      "type": "string",
      "defaultValue": "subjobqueue"
    },
    "laSkuName": {
      "type": "string",
      "allowedValues": [
        "pergb2018",
        "Free",
        "Standalone",
        "PerNode",
        "Standard",
        "Premium"
      ],
      "defaultValue": "pergb2018",
      "metadata": {
        "description": "Pricing tier: PerGB2018 or legacy tiers (Free, Standalone, PerNode, Standard or Premium) which are not available to all customers."
      }
    },
    "MIResourceId": {
      "type": "string"
    },
    "TenantId": {
      "type": "string"
    },
    "ManagementGroupId":{
      "type": "string"
    }
  },
  "variables": {
    "subProcessorAppName": "[concat('AzSKTSWorkItemProcessor-', take(uniqueString(resourceGroup().id),5))]",
    "workItemSchedulerAppName": "[concat('AzSKTSWorkItemScheduler-', take(uniqueString(resourceGroup().id),5))]",
    "storageName": "[concat('azsktsstorage', take(uniqueString(resourceGroup().id),5))]",
    "workspaceName": "[concat('AzSKTSLAWorkspace-', take(uniqueString(resourceGroup().id),5))]",
    "identityName": "[concat('AzSKTSProcessorMI-', take(uniqueString(resourceGroup().id),5))]",
    "rgRoleAssignmentGuid": "[guid(resourceGroup().id)]",
    "contributorRoleId": "[concat(subscription().Id, '/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c')]",
    "rgRoleAssignmentName": "[variables('rgRoleAssignmentGuid')]"
  },
  "resources": [
 
    {
      "name": "[variables('storageName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2019-06-01",
      "sku": {
        "name": "[parameters('storageSKU')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "azsktsapp"
      },
      "kind": "StorageV2",
      "resources":[
        {
          "type": "blobServices/containers",
          "apiVersion": "2019-06-01",
          "name": "[concat('default/', parameters('StorageContainerName'))]",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts/', variables('storageName'))]"
          ],
          "properties": {
              "publicAccess": "None"
          }
        }
      ]
    },
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "name": "[variables('workspaceName')]",
      "apiVersion": "2017-03-15-preview",
      "location": "[resourceGroup().location]",
      "properties": {
        "sku": {
          "name": "[parameters('laSkuName')]"
        },
        "retentionInDays": 120,
        "features": {
          "searchVersion": 1,
          "legacy": 0,
          "enableLogAccessUsingOnlyResourcePermissions": true
        }
      }
    },
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "name": "[variables('identityName')]",
      "apiVersion": "2018-11-30",
      "location": "[resourceGroup().location]"
    },
    {
      "apiVersion": "2015-08-01",
      "name": "[parameters('hostingPlanName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "HostingPlan"
      },
      "sku": {
        "name": "[parameters('skuName')]",
        "capacity": "[parameters('skuCapacity')]"
      },
      "properties": {
        "name": "[parameters('hostingPlanName')]"
      }
    },
    {
      "apiVersion": "2015-08-01",
      "name": "[variables('subProcessorAppName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities/', variables('identityName'))]": {
          },
          "[parameters('MIResourceId')]": {}
        }
      },
      "tags": {
        "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]": "Resource",
        "displayName": "Website"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]",
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities/', variables('identityName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts/', variables('storageName'))]",
        "[resourceId('Microsoft.OperationalInsights/workspaces/', variables('workspaceName'))]"
      ],
      "properties": {
        "name": "[variables('subProcessorAppName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
        "siteConfig": {
          "AlwaysOn": true
      }
      },
      "resources": [
        {
          "apiVersion": "2018-11-01",
          "name": "MSDeploy",
          "type": "Extensions",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', variables('subProcessorAppName'))]"
          ],
          "properties": {
            "packageUri": "http://aka.ms/DevOpsKit/TD/SubProcessorJob"
          }
        },
        {
        "name": "appsettings",
        "type": "config",
        "apiVersion": "2015-08-01",
        "tags": {
            "displayName": "WebAppSettings"
        },
        "dependsOn": [
          "[concat('Microsoft.Web/sites/', variables('subProcessorAppName'))]",
          "[resourceId('Microsoft.Web/Sites/extensions', variables('subProcessorAppName'), 'MSDeploy')]"
        ],
        "properties": {
            "StorageResourceId": "[resourceId('Microsoft.Storage/storageAccounts/', variables('storageName'))]",
            "LAResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces/', variables('workspaceName'))]",
            "LAWorkspaceId":"[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('workspaceName')), '2017-03-15-preview').customerId]",
            "StorageContainerId": "[parameters('StorageContainerName')]",
            "InternalMIAppId": "[reference(concat('Microsoft.ManagedIdentity/userAssignedIdentities/', variables('identityName')), '2018-11-30').clientId]",
            "MIAppId": "[reference(parameters('MIResourceId'), '2018-11-30').clientId]",
            "ManagementGroupId": "[parameters('ManagementGroupId')]",
            "TenantId": "[parameters('TenantId')]"
        }
      }
      ]
    },
    {
      "apiVersion": "2015-08-01",
      "name": "[variables('workItemSchedulerAppName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities/', variables('identityName'))]": {
          }
        }
      },
      "tags": {
        "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]": "Resource",
        "displayName": "Website"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]",
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities/', variables('identityName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts/', variables('storageName'))]",
        "[resourceId('Microsoft.OperationalInsights/workspaces/', variables('workspaceName'))]"
      ],
      "properties": {
        "name": "[variables('workItemSchedulerAppName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
        "siteConfig": {
          "metadata": [
            {
                "name": "CURRENT_STACK",
                "value": "dotnetcore"
            }
          ],
          "AlwaysOn": true
        }
      },
      "resources": [
        {
          "apiVersion": "2018-11-01",
          "name": "MSDeploy",
          "type": "Extensions",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', variables('workItemSchedulerAppName'))]"
          ],
          "properties": {
            "packageUri": "http://aka.ms/DevOpsKit/TD/WorkItemProcessor"
          }
        },
        {
        "name": "appsettings",
        "type": "config",
        "apiVersion": "2015-08-01",
        "tags": {
            "displayName": "WebAppSettings"
        },
        "dependsOn": [
          "[concat('Microsoft.Web/sites/', variables('workItemSchedulerAppName'))]",
          "[resourceId('Microsoft.Web/Sites/extensions', variables('workItemSchedulerAppName'), 'MSDeploy')]"
        ],
        "properties": {
            "AzureStorageSettings:ResourceId": "[resourceId('Microsoft.Storage/storageAccounts/', variables('storageName'))]",
            "LAConfigurations:ResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces/', variables('workspaceName'))]",
            "LAConfigurations:WorkspaceId":"[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('workspaceName')), '2017-03-15-preview').customerId]",
            "StorageContainerId": "[parameters('StorageContainerName')]",
            "AuthSettings:ConnectionString": "[concat('RunAs=App;AppId=',reference(concat('Microsoft.ManagedIdentity/userAssignedIdentities/', variables('identityName')), '2018-11-30').clientId)]",
            "RuleEngine:WorkflowName": "FullTenantScan"
        }
      }
      ]
    },    
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2017-09-01",
      "name": "[variables('rgRoleAssignmentName')]",
      "properties": {
        "roleDefinitionId": "[variables('contributorRoleId')]",
        "principalId": "[reference(concat('Microsoft.ManagedIdentity/userAssignedIdentities/', variables('identityName')), '2018-11-30').principalId]",
        "scope": "[resourceGroup().id]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities/', variables('identityName'))]"        
      ]
    }
  ],
  "outputs": {
    "storageId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Storage/storageAccounts/', variables('storageName'))]"
    },
    "serverfarmId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]"
    },
    "storageQueueName":{
      "type": "string",
      "value": "[parameters('storageQueueName')]"
    }
   
  }
}